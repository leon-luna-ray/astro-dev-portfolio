<!DOCTYPE html>
<html lang='en'>
    <head>
        <BaseHead
            title={`${profile?.name} | ${pageTitle()}`}
            description={global?.description}
        />
    </head>
    <body>
        <div id='top-bg' aria-hidden='true'></div>
        <Header
            client:load
            name={profile?.name}
            title={pageTitle()}
            path={getPathParts()}
            isHome={isHome()}
        />
        <!--Page Content -->
        <main>
            <slot />
        </main>
        <Footer
            linkedin={profile?.linkedin}
            github={profile?.github}
            email={profile?.email}
        />
    </body>
</html>
